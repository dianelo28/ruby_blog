<!-- app/views/users/new.html.erb -->

<div class="col-sm-4 col-sm-offset-4">

  <h1> Sign up! </h1>

  <%= form_for @user do |f| %>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>

    <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, class:"form-control"%><br />    
    <%= f.text_field :last_name, placeholder: "Last Name", class:"form-control"%><br />
    <%= f.email_field :email, placeholder: "Email", class:"form-control"%><br />
    <%= f.password_field :password, placeholder: "Password", class:"form-control" %><br />
    <%= f.password_field :password, placeholder: "Please enter your password again", class:"form-control" %><br />

    <%= f.submit "Sign Up" %>

  <% end %>